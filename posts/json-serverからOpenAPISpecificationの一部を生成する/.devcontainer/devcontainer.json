{
  "name": "json-server-workspace",
  "dockerComposeFile": "./docker-compose.yml",
  "service": "json-server-workspace",
  "workspaceFolder": "/workspace",
  "settings": {
    // ## VSCode設定
    // タブサイズ
    "editor.tabSize": 2,
    // ### ブラケットペア
    // ブラケットペアを強調表示
    "editor.guides.bracketPairs": "active",
    // ### インデントガイド
    // アクティブなインデント ガイドを強調表示
    "editor.guides.highlightActiveIndentation": true,
    // ### コードヒント
    // [Ctr]+[Alt] を押している間ヒントを表示
    "editor.inlayHints.enabled": "offUnlessPressed",
    // 変数の型のヒント
    "typescript.inlayHints.variableTypes.enabled": true,
    // 引数の型のヒント
    "typescript.inlayHints.parameterNames.enabled": "all",
    // クラスのプロパティの型のヒント
    "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
    // パラメータの型のヒント
    "typescript.inlayHints.parameterTypes.enabled": true,
    // 戻り値の型のヒント
    "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
    // 変数の型のヒント
    "javascript.inlayHints.variableTypes.enabled": true,
    // 引数の型のヒント
    "javascript.inlayHints.parameterNames.enabled": "all",
    // クラスのプロパティの型のヒント
    "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
    // パラメータの型のヒント
    "javascript.inlayHints.parameterTypes.enabled": true,
    // 戻り値の型のヒント
    "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
    // ### ペアのタグの自動編集
    "editor.linkedEditing": true,
    // ### プロセスの分離設定
    "extensions.experimental.affinity": {
      // vim
      "vscodevim.vim": 1
    },
    "source.organizeImports": true,
    // "editor.codeActionsOnSave": {
    // },
    "editor.formatOnSave": true,
    // ### 言語別
    "[markdown]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "files.trimTrailingWhitespace": false
    },
    "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
      "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[css]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[scss]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[less]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[graphql]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[yaml]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[sql]": {
      "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
    },
    "[shellscript]": {
      "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[powershell]": {
      "editor.defaultFormatter": "ms-vscode.PowerShell"
    },
    // ****************************
    // *      保存時の自動整形系
    // ****************************
    // # 末尾のスペースの削除
    "files.trimTrailingWhitespace": true,
    // ## マークダウンファイルは末尾のスペース削除をOFF
    // **************************************
    // *      コンフリクトによる調整
    // **************************************
    // ファイルによってインデントサイズを変えるをOFF
    "editor.detectIndentation": false,
    // **************************************
    // *      拡張設定
    // **************************************
    // 「数式」は Markdown Preview Enhanced と競合するのため無効化
    "markdown.extension.math.enabled": false,
    // 番号付きリストの「自動番号振り直し」と「リスト追加時に連番を使う」は無効化
    // "markdown.extension.orderedList.autoRenumber": false,
    // "markdown.extension.orderedList.marker": "one",
    // インデント幅は VS Code の設定を継承する
    "markdown.extension.list.indentationSize": "inherit",
    // 画像パスを絶対パスに変換するのを無効化
    "markdown.extension.print.absoluteImgPath": false,
    // エディター上の装飾を無効化 (~~取り消し線~~ や `インライン コード` など)
    "markdown.extension.syntax.decorations": false,
    // テーブル フォーマッターを無効化
    "markdown.extension.tableFormatter.enabled": false
  },
